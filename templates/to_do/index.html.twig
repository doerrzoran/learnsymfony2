{% extends 'template.html.twig' %}

{% block body %}
    

    {% block title %}
        <h1>liste des todos : </h1>
    {% endblock %}
    <ol class="list-group">
        {% for name,content in app.session.get('todo') %}
            <li class="list-group-item">
                {{name}} : {{content}}
            </li>
        {% endfor %}
    </ol>
{% endblock %}
